<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="16dp"
    android:background="@drawable/background"
    tools:context=".Mainmenu">

    <TextView android:id="@+id/text_title2"
        android:text="Synchronize"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/picture"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_start"

        android:text="Start"
        android:textColor="#FFFFFF"
        android:textSize="20dp"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/clickbutton"

        android:textAllCaps="false"
        android:layout_marginTop="130dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="120dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_options"

        android:text="Options"
        android:textColor="#FFFFFF"
        android:textSize="20dp"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/clickbutton"

        android:textAllCaps="false"
        android:layout_below="@+id/btn_start"
        android:layout_alignStart="@+id/btn_start"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/btn_ranking"

        android:text="Ranking"
        android:textColor="#FFFFFF"
        android:textSize="20dp"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/clickbutton"

        android:textAllCaps="false"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/btn_options"
        android:layout_alignStart="@+id/btn_options" />

    <Button
        android:id="@+id/btn_help"

        android:text="Help"
        android:textColor="#FFFFFF"
        android:textSize="20dp"

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/clickbutton"

        android:textAllCaps="false"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/btn_ranking"
        android:layout_alignStart="@+id/btn_ranking" />

    <com.facebook.login.widget.ProfilePictureView
        android:layout_height="50sp"
        android:layout_width="50sp"
        android:layout_gravity="center"
        android:id="@+id/picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.facebook.login.widget.LoginButton
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"

        android:id="@+id/btn_fb_login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/fbicon"

        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/btn_sharescore"
        android:layout_above="@+id/text_title2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/user_name"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

</RelativeLayout>
